[Unit]
Description=Logout then login campus network (05:00 daily via timer)
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
WorkingDirectory=$home

ExecStartPre=$HOME/.local/bin/logout.sh
ExecStart=/usr/bin/sleep 2
ExecStartPost=$HOME/.local/bin/login.sh

StandardOutput=journal
StandardError=journal
